<Window x:Class="PeerToPeerChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeerToPeerChatApp"
        mc:Ignorable="d"
        Title="PeerToPeer Chat" 
        FontFamily="Consolas" FontSize="20"
        Height="200" MinHeight="200" MaxHeight="200"
        Width="600" MinWidth="600" MaxWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <!-- IP -->
        <Label Content="IP:" Margin="10" Grid.Row="0" Grid.Column="0" />
        <TextBox x:Name="ipTextBox" Text="127.0.0.1" Margin="10" Grid.Row="0" Grid.Column="1" />
        
        <!-- Port -->
        <Label Content="Port:" Margin="10" Grid.Row="1" Grid.Column="0" />
        <TextBox x:Name="portTextBox" Text="1024" Margin="10" Grid.Row="1" Grid.Column="1" />
        
        <!-- Buttons -->
        <Button x:Name="waitConnectionButton" Content="Ожидание подключения" Margin="10" Grid.Row="2" Grid.Column="0" Click="waitConnectionButton_Click" />
        <Button x:Name="connectionButton" Content="Подключение" Margin="10" Grid.Row="2" Grid.Column="1" Click="connectionButton_Click" />
    </Grid>
</Window>
